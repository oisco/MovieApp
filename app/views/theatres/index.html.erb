<h1>Listing theatres</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Capacity</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @theatres.each do |theatre| %>
		  <tr>
			<td><%= theatre.theatreName %></td>
			<td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{theatre.latitude}%2C#{theatre.longitude}" %><td>
			<td><%= theatre.capacity %></td>
			<td><%= link_to 'Show', theatre %></td>
			<td><%= link_to 'Edit', edit_theatre_path(theatre) %></td>
			<td><%= link_to 'Destroy', theatre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Theatre', new_theatre_path %>
