
	<h1>Listing tickets</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Theatre</th>
	  <th>Movie</th>
	  <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
		  <tr>
			<td><%= ticket.user.firstName %></td>
			<td><%= ticket.showing.theatre.theatreName %></td>
			<td><%= ticket.showing.movie.name %></td>
			<td><%= ticket.showing.dateAndTime %></td>

			<td><%= link_to 'Show', ticket %></td>
			<td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
			<td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
